set $lock swaylock \
    --screenshots \
    --effect-scale 0.5\
    --effect-blur 7x5 \
    --effect-scale 2 \
    --grace 2\
    --effect-compose \
    "center;$HOME/.config/sway/rocinante_by_imajinn_design_dbwhmwb-fullview.png"

bindsym $mod+Shift+l exec $lock

# Does absolutely nothing if not running on a laptop
bindswitch --reload --locked lid:on exec $lock


